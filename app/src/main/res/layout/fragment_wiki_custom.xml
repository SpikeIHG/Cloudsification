    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp"
    android:fontFamily="@font/d"
    android:gravity="center_horizontal"
    android:padding="4dp"
    android:text="云朵自定义"
    android:textColor="@android:color/black"
    android:textSize="24sp"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/btn_quit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:src="@drawable/back"
        app:layout_constraintBottom_toBottomOf="@+id/title_abc"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/transparent"
        app:layout_constraintTop_toTopOf="@+id/title_abc" />


    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintTop_toBottomOf="@id/title_abc"
    android:background="@color/okcomputer"
    android:scrollbarAlwaysDrawHorizontalTrack="false"
    android:scrollbars="none"
    tools:context=".fragments.wikifragments.WikiStoryFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">
