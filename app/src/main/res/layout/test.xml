<androidx.cardview.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/poem0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    app:layout_constraintTop_toTopOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightblue"
        android:orientation="vertical"
        android:padding="10dp">


        <TextView
            android:id="@+id/txt11"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="《拥有你以前》"
            android:textSize="16sp"
            android:textStyle="italic|bold"
            app:layout_constraintBottom_toTopOf="@+id/txt12"
            app:layout_constraintEnd_toStartOf="@+id/poet1"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="Fernando Antonio Nogueira De Seabra Pessoa"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            android:textStyle="italic|bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/txt13"
            app:layout_constraintEnd_toStartOf="@id/poet1"
            app:layout_constraintTop_toBottomOf="@+id/txt11" />

        <TextView
            android:id="@+id/txt13"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="  费尔南多·佩索阿"
            android:textSize="16sp"
            android:textStyle="italic|bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/poet1"
            app:layout_constraintEnd_toStartOf="@id/poet1"
            app:layout_constraintTop_toBottomOf="@+id/txt12" />
        />


        <ImageView
            android:id="@+id/poet1"
            android:layout_width="90dp"
            android:layout_height="130dp"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="14dp" />


        <TextView
            android:id="@+id/verse1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity=""
            android:letterSpacing="0.1"
            android:padding="14dp"
            android:text="@string/不急"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/poet1"
            tools:layout_editor_absoluteX="14dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>


