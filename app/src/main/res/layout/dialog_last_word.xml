<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <TextView
        android:layout_marginTop="25dp"
        android:id="@+id/txt_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="致读者"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="24sp"
        android:textStyle="bold"/>

<ScrollView
    android:layout_width="match_parent"
    app:layout_constraintTop_toBottomOf="@+id/txt_intro"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_height="500dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/ckd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:letterSpacing="0.1"
                android:padding="6dp"
                android:textStyle="italic"
                android:textSize="14sp"
                android:gravity="center"
                android:text="这里的话算是笔者最后写给读者你的"/>

            <TextView
                app:layout_constraintTop_toBottomOf="@id/ckd"
                android:id="@+id/txt_body_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:letterSpacing="0.1"
                android:padding="6dp"
                android:layout_marginTop="8dp"
                android:text="@string/最后的话"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txt_body_intro"
                app:layout_constraintEnd_toEndOf="parent"
                android:letterSpacing="0.1"
                android:padding="6dp"
                android:gravity="right"
                android:text="你真挚的SpikeIHG"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/txt_end2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/txt_end"
                app:layout_constraintEnd_toEndOf="parent"
                android:letterSpacing="0.1"
                android:padding="6dp"
                android:gravity="right"
                android:text="2024年 冬"
                android:textSize="16sp" />
        </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>